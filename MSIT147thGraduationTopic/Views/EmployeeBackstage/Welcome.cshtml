                    <i class="fa-solid fa-user-group"></i>
                </div>
                <div class="text-center mb-auto fs-2">
                    <a class="link-dark stretched-link" href="@Url.Action("MemberList","MemberBackstage")">會員管理</a>
                </div>
            </div>
        </div>

        <div class="p-5">
            <div class="custom-link-box m-auto d-flex flex-column position-relative">
                <div class="text-center fs-1 mt-auto mb-3">
                    <i class="fa-solid fa-money-check-dollar"></i>
                </div>
                <div class="text-center mb-auto fs-2">
                    <a class="link-dark stretched-link" href="@Url.Action("Index","CouponsBackstageSettings")">優惠卷管理</a>
                </div>
            </div>
        </div>

        <div class="p-5">
            <div class="custom-link-box m-auto d-flex flex-column position-relative">
                <div class="text-center fs-1 mt-auto mb-3">
                    <i class="fa-solid fa-chart-column"></i>
                </div>
                <div class="text-center mb-auto fs-2">
                    <a class="link-dark stretched-link" href="@Url.Action("Sales","Statistic")">查看統計</a>
                </div>
            </div>
        </div>

